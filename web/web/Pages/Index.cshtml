@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h4>@Model.Message</h4>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Customers)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@c.Id">
                            Edit
                        </a>
                        <button type="submit"
                                asp-page-handler="delete"
                                asp-route-id="@c.Id">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a href="./Create">Create</a>
    </div>
</form>